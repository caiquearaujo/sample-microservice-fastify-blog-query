{
	"name": "sample-microservice-fastify-blog-posts",
	"version": "1.0.0",
	"description": "Micro service built with Fastify to handle Posts for a Blog application.",
	"scripts": {
		"check": "tsc --noEmit",
		"check:watch": "npm run check -- --watch",
		"build": "cross-env NODE_ENV=production ENVIRONMENT=production tsc -p tsconfig.build.json",
		"build:watch": "cross-env NODE_ENV=production ENVIRONMENT=production tsc -p tsconfig.build.json --watch",
		"server:watch": "concurrently \"npm:build:watch\" \"nodemon --watch 'build/**/*' ./build/index.js\"",
		"server:start": "cross-env ENVIRONMENT=production node ./build/index.js",
		"server:dev": "concurrently \"npm:build\" \"nodemon ./build/index.js\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ext .ts --ignore-path .gitignore --fix src",
		"test": "cross-env NODE_ENV=test ENVIRONMENT=test jest",
		"test:debug": "cross-env NODE_ENV=test ENVIRONMENT=test node --inspect ./node_modules/.bin/jest --runInBand"
	},
	"author": "caiquearaujo",
	"license": "MIT",
	"homepage": "https://github.com/caiquearaujo/sample-microservice-fastify-blog-posts#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/caiquearaujo/sample-microservice-fastify-blog-posts.git"
	},
	"bugs": {
		"url": "https://github.com/caiquearaujo/sample-microservice-fastify-blog-posts/issues"
	},
	"devDependencies": {
		"@types/jest": "^29.2.5",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"eslint": "^8.31.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-import-resolver-typescript": "^3.5.2",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"prettier": "^2.8.1",
		"ts-jest": "^29.0.3",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"@fastify/compress": "^6.2.0",
		"@fastify/helmet": "^10.1.0",
		"@fastify/rate-limit": "^7.6.0",
		"axios": "^1.2.2",
		"concurrently": "^7.6.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"fastify": "^4.11.0",
		"module-alias": "^2.2.2",
		"pino-pretty": "^9.1.1"
	},
	"_moduleAliases": {
		"@": "build/"
	}
}
